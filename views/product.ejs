<%- include('partials/header.ejs') %>
<main>
    <section class="product-details">
        <div class="product-image">
            <div class="slideshow">
                <div class="slideshow-image" id="image-display">
                    <img src="<%= product.image[0] %>" alt="<%= product.name %>">
                </div>
                <div class="slideshow-buttons">
                    <button id="prev-image" class="btn-slideshow" onclick="changeImage(-1)">&#10094;</button>
                    <button id="next-image" class="btn-slideshow" onclick="changeImage(1)">&#10095;</button>
                </div>
            </div>
        </div>
        <div class="product-info">
            <h1><%= product.name %></h1>
            <p class="product-type">Type: <%= product.type %></p>
            <p class="product-price">Price: $<%= product.price.toFixed(2) %></p>
            <p class="product-description"><%= product.description %></p>
            <p>Views: <%= product.views%></p>
            <button class="btn-add-to-cart">Add to Cart</button>
        </div>
    </section>
    <section>
        <div class="comment-section">
            <h2>Comments</h2>
            <div class="comment-form">
                <h3>Add a Comment</h3>
                <form action="/product/<%= product._id %>/add-comment" method="POST">
                    <div class="form-group">
                        <label for="username">Your Name</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="comment">Your Comment</label>
                        <textarea id="comment" name="comment" rows="4" class="form-control" required></textarea>
                    </div>
                    
                    <button type="submit" class="btn-add-comment">Submit Comment</button>
                </form>
            </div>
            <% if(product.comments) {%>
            <% product.comments.forEach(comment => { %>
                <div class="comment">
                    <div class="comment-header">
                        <p class="comment-username"><strong><%= comment.username %> <%= comment.date %> </strong></p>
                        
                    </div>
                    <p class="comment-text"><%= comment.comment %></p>
                </div>
            <% }) }%>
            
        </div>
    </section>
</main>
<%- include('partials/footer.ejs') %>

<script>
    // JavaScript for handling the image slideshow
    let currentImageIndex = 0;
    const images = <%- JSON.stringify(product.image) %>;
    const imageDisplay = document.getElementById("image-display");

    function changeImage(offset) {
        currentImageIndex += offset;

        // Ensure the index wraps around the images array
        if (currentImageIndex < 0) {
            currentImageIndex = images.length - 1;
        } else if (currentImageIndex >= images.length) {
            currentImageIndex = 0;
        }

        // Update the displayed image
        imageDisplay.innerHTML = `<img src="${images[currentImageIndex]}" alt="<%= product.name %>">`;
    }
</script>
